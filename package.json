{
  "name": "ve-blog-vite",
  "version": "1.0.0",
  "description": "前后端分离博客系统",
  "author": "791422171@qq.com",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --mode dev --host",
    "test": "vite --mode test --host",
    "prod": "vite --mode prod --host",
    "build": "vue-tsc --noEmit && vite --mode prod build",
    "build:dev": "vue-tsc --noEmit && vite --mode dev build",
    "build:test": "vue-tsc --noEmit && vite --mode test build",
    "preview": "vite preview --host",
    "format": "prettier --write src",
    "mirror:get": "pnpm config get registry",
    "mirror:set": "pnpm config set registry https://registry.pnpmmirror.com",
    "mirror:rm": "pnpm config rm registry",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "up": "npx pnpm-check-updates -u",
    "prepare": "",
    "lint-fix": "eslint --fix --ext .js,.ts,.jsx,.tsx,.vue src",
    "lint-prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint": "pnpm run lint-prettier && pnpm run lint-fix"
  },
  "dependencies": {
    "@kangc/v-md-editor": "^2.3.18",
    "@vueuse/core": "^9.13.0",
    "aplayer": "^1.10.1",
    "axios": "^1.7.7",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "easy-typer-js": "^2.1.0",
    "echarts": "^5.5.1",
    "js-cookie": "^3.0.5",
    "lodash-es": "^4.17.21",
    "nprogress": "^0.2.0",
    "pinia": "^2.2.2",
    "pinia-plugin-persistedstate": "^2.4.0",
    "prismjs": "^1.29.0",
    "swiper": "^11.1.12",
    "tocbot": "^4.29.0",
    "v-viewer": "^3.0.13",
    "viewerjs": "^1.11.6",
    "vite-plugin-banner": "^0.7.1",
    "vite-plugin-html": "^3.2.2",
    "vue": "^3.5.3",
    "vue-cropper": "^1.1.4",
    "vue-masonry": "^0.16.0",
    "vue-router": "^4.4.3",
    "vue3-danmaku": "^1.6.1",
    "vue3-lazy": "1.0.0-alpha.1",
    "vue3-social-share": "^0.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/crypto-js": "^4.2.2",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.50",
    "@types/nprogress": "^0.2.3",
    "@types/prismjs": "^1.26.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@unocss/preset-uno": "^0.59.4",
    "@unocss/transformer-directives": "^0.59.4",
    "@unocss/vite": "^0.59.4",
    "@vicons/ionicons5": "^0.12.0",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.28.0",
    "naive-ui": "^2.39.0",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.78.0",
    "typescript": "^5.5.4",
    "unplugin-auto-import": "^0.12.2",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue-components": "^0.22.12",
    "vite": "^5.4.3",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-prismjs": "0.0.8",
    "vite-plugin-progress": "^0.0.7",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-devtools": "^7.4.4",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
